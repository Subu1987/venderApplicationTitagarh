<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns:suite="sap.suite.ui.commons"
	xmlns:viz="sap.viz.ui5.controls" xmlns:vizData="sap.viz.ui5.data" xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds">
	<suite:ChartContainer id="chartContainer" showFullScreen="true" showPersonalization="false" autoAdjustHeight="false"
		showLegendButton="false" title="{globalData>/selectedTabText}">
		<!-- Chart Content -->
		<suite:content>
			<suite:ChartContainerContent icon="sap-icon://bar-chart" title="Chart View">
				<suite:content>
					<viz:VizFrame id="idVizFrame" vizType="column" height="380px" width="100%" uiConfig="{applicationSet:'fiori'}">
						<!-- Define dependents for Popover -->
						<viz:dependents>
							<viz:Popover id="idPopOverQuaterlyWise"></viz:Popover>
						</viz:dependents>
						<viz:dataset>
							<vizData:FlattenedDataset data="{top5listData>/top5CustlistDataQuaterlyWise}">
								<vizData:dimensions>
									<vizData:DimensionDefinition name="Supplier Name" value="{top5listData>supplier}"/>
									<vizData:DimensionDefinition name="Quarter Year" value="{top5listData>quaterYear}"/>
									<vizData:DimensionDefinition name="Quarter" value="{top5listData>quater}"/>
								</vizData:dimensions>
								<vizData:measures>
									<vizData:MeasureDefinition name="Turn Over (₹ Cr)" value="{top5listData>turnOver}"/>
								</vizData:measures>
							</vizData:FlattenedDataset>
						</viz:dataset>
						<viz:feeds>
							<vizFeeds:FeedItem uid="valueAxis" type="Measure" values="Turn Over (₹ Cr)"/>
							<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Supplier Name"/>
							<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Quarter Year"/>
							<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Quarter"/>
						</viz:feeds>
					</viz:VizFrame>
				</suite:content>
			</suite:ChartContainerContent>
			<!-- Table Content -->
			<suite:ChartContainerContent icon="sap-icon://table-chart" title="Table View">
				<suite:content>
					<table:Table id="idTable" rows="{top5listData>/top5CustlistDataQuaterlyWise}" selectionMode="None">
						<table:columns>
							<table:Column>
								<Label text="Supplier Name"/>
								<table:template>
									<Text text="{top5listData>supplier}"/>
								</table:template>
							</table:Column>
							<table:Column>
								<Label text="Quarter"/>
								<table:template>
									<Text text="{top5listData>quater}"/>
								</table:template>
							</table:Column>
							<table:Column>
								<Label text="Quarter Year"/>
								<table:template>
									<Text text="{top5listData>quaterYear}"/>
								</table:template>
							</table:Column>
							<table:Column>
								<Label text="Turn Over (₹ Cr)"/>
								<table:template>
									<Text text="{top5listData>turnOver}"/>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</suite:content>
			</suite:ChartContainerContent>
		</suite:content>
	</suite:ChartContainer>
</core:FragmentDefinition>