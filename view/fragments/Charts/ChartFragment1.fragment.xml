                    <core:Icon src="sap-icon://sorting-ranking" size="1rem" color="Information" tooltip="Sortable / Clickable"/>
                </HBox>
                <table:template>
                    <Text text="{venderHistoryData>lifnr}" wrapping="true"/>
                </table:template>
            </table:Column>

