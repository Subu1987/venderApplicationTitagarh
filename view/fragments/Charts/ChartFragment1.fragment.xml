<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table">
    <table:Table id="idTable" class="greenTable" rows="{venderHistoryData>/}" selectionMode="None" visibleRowCount="10" width="100%" enableColumnReordering="false">
        <table:columns>

            <table:Column width="150px" sortProperty="lifnr" filterProperty="lifnr">
